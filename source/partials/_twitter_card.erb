<meta name="twitter:card" content="summary">
<meta name="twitter:url" content="<%= data.seo.site_url %><%= current_page.url %>">
<meta name="twitter:title" content="<%= page_title(page_data) %>">
<meta name="twitter:description" content="<%= page_data.description ||= data.seo.description %>">
<meta name="twitter:image" content="<%= data.social.thumbnail_url %>">
<meta name="twitter:site" content="@<%= data.social.twitter_site %>">
<meta name="twitter:creator" content="@<%= data.social.twitter_author %>">
